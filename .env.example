###############################################
# Copy this file to `.env` and fill your values
# Only strings are supported; booleans use: true/false, 1/0, yes/no
###############################################

# --- Binance API (required for live trading; not needed for paper mode) ---
# Preferred keys used by the app
API_KEY=your_key_here
API_SECRET=your_secret_here
# Back-compat keys (if older scripts expect these)
BINANCE_API_KEY=
BINANCE_API_SECRET=

# --- App/server ---
FLASK_SECRET_KEY=change_me
PAPER_TRADING=true
# Server port (mostly ignored on Render/other PaaS; they inject PORT)
PORT=5000

# Optional data directory (used on Render to mount persistent disk)
DATA_DIR=./data

# --- Strategy/config knobs ---
BASE_QUOTE=USDT
UNIVERSE_SIZE=12
MIN_24H_QUOTE_VOLUME=10000000

# Signal gating / execution thresholds
NEAR_EMA_PCT=0.02
RSI_THRESHOLD=30
RSI_EXEC_THRESHOLD=45
RSI_OVERBOUGHT=70

# Risk/exit
TAKE_PROFIT_PCT=0.06
STOP_LOSS_PCT=0.03
TRAILING_PCT=0.03
EQUITY_PROXY=1000

# --- Backtester-only (optional) ---
LOOKBACK_DAYS=90
BACKTEST_START=2021-01-01
BACKTEST_END=2024-12-31
WHITELIST=
BLACKLIST=
COOLDOWN_MINUTES=120
LOOP_INTERVAL_SECONDS=300

# --- Deprecated / not used ---
# TESTNET is not used by the dashboard; use PAPER_TRADING instead
TESTNET=
